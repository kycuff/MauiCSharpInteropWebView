<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TestMauiMap.Pages.MapSelectedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:custom="clr-namespace:TestMauiMap.Views"
    Title="MapSelectedPage">

    <ContentPage.Content>
        <Grid
            Margin="0"
            Padding="0"
            BackgroundColor="White"
            RowDefinitions="*,auto"
            RowSpacing="0">
            
            <custom:MapView x:Name="IShare" Grid.Row="0"/>

            <Button Text="Submit Button" Grid.Row="1" Margin="20" Clicked="Button_Clicked"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>
